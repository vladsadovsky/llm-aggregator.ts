{
  "name": "llm-aggregator",
  "version": "1.0.0",
  "description": "LLM Aggregator - Organize and search LLM conversation Q&A pairs",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite --config vite.config.ts",
    "dev:server": "vite --config vite.config.server.ts --host localhost --port 5173 --no-open",
    "build": "vue-tsc --noEmit && vite build",
    "build:icons": "echo 'Generate icons from build/llm-aggregator.svg using electron-icon-builder or online tools. Output to public/icons. See build/README.md'",
    "electron:dev": "vite --config vite.config.ts",
    "electron:prod": "set NODE_ENV=production&& npm run build && electron .",
    "electron:build": "npm run build && electron-builder",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "preview": "vite preview",
    "typecheck": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test tests/e2e",
    "test:visual": "playwright test tests/visual"
  },
  "dependencies": {
    "@primeuix/themes": "^2.0.3",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.9.0",
    "js-yaml": "^4.1.0",
    "lucide-vue-next": "^0.563.0",
    "markdown-it": "^14.0.0",
    "pinia": "^2.1.0",
    "primeicons": "^7.0.0",
    "primevue": "^4.2.0",
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/js-yaml": "^4.0.0",
    "@types/markdown-it": "^14.0.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/tsconfig": "^0.5.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-vue": "^10.7.0",
    "typescript": "^5.0.0",
    "vite": "^5.4.0",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.0",
    "vitest": "^2.0.0",
    "vue-tsc": "^2.0.0"
  },
  "build": {
    "appId": "com.llm-aggregator.app",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "icon": "public/icons/llm-aggregator.icns",
      "target": [
        "dmg",
        "zip"
      ]
    }
  },
  "author": "Vlad Sadovsky",
  "license": "MIT"
}